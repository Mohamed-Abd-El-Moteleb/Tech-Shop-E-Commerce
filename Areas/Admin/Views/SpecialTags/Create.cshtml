@model Shop.Models.SpecialTag

@{
    ViewData["Title"] = "Create";
}

<h2>Create Special Tag</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="p-4 rounded border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SpecialTagName" class="control-label"></label>
                    <input asp-for="SpecialTagName" class="form-control" />
                    <span asp-validation-for="SpecialTagName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
