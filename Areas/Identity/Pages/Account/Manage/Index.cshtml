@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" disabled />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" disabled />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input value="@Model.Email" class="form-control" disabled />
                <label class="form-label">Email</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" disabled />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" disabled />
                <label asp-for="Input.Address"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button id="edit-btn" type="button" class="btn btn-outline-primary">Edit</button>
                <button id="update-profile-button" type="submit" class="btn btn-primary d-none">Save</button>
                <button id="cancel-btn" type="button" class="btn btn-secondary d-none">Cancel</button>
            </div>
        </form>

        <div class="mt-4">
            <a asp-area="Customer" asp-controller="Order" asp-action="MyOrders" class="btn btn-outline-secondary w-100">
                📦 View My Orders
            </a>
        </div>
        <div class="mt-2">
            <a asp-page="./ChangePassword" class="btn btn-outline-danger w-100">
                🔐 Change Password
            </a>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const editBtn = document.getElementById('edit-btn');
        const cancelBtn = document.getElementById('cancel-btn');
        const saveBtn = document.getElementById('update-profile-button');
        const inputs = document.querySelectorAll('#profile-form input');

        editBtn.addEventListener('click', () => {
            inputs.forEach(input => input.removeAttribute('disabled'));
            saveBtn.classList.remove('d-none');
            cancelBtn.classList.remove('d-none');
            editBtn.classList.add('d-none');
        });

        cancelBtn.addEventListener('click', () => {
            window.location.reload();
        });
    </script>
}
